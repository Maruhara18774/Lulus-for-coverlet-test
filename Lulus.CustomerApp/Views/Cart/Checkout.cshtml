@model Lulus.ViewModels.Order.CurrentCartRespond
<style>
    .cart {
        margin-top: 10px;
        margin-left: 20%;
        margin-right: 20%;
    }
</style>
<div class="cart">
    <p hidden>@Model.Order_ID</p>
    <h2>Checkout</h2>
    <p>@Model.DetailCount products</p>
    @{double count = 0;}
    @foreach (var item in Model.OrderDetails)
    {
        count += item.Product_SellPrice;
        <div class="container">
            <div class="row">
                <div class="col-md-10">
                    <h4>@item.Product_Name</h4>
                    <p>@item.Product_SellPrice$</p>
                    <p>Size @item.SizeKey</p>
                    <p>
                        Quantity: @item.OrderDetail_Quantity
                    </p>

                </div>
                <div class="col-md-2">
                    <img src="@item.Product_Image" width="100%" height="100%" />
                </div>
            </div>
        </div>
        <hr />
    }
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <p>Total:</p>
            </div>
            <div class="col-md-2">
                <h3 style="text-align:right">@count$</h3>
                <a class="btn btn-dark" asp-action="Confirmation" asp-controller="Cart" asp-route-id="@Model.Order_ID">Confirm</a>
            </div>
        </div>
    </div>
</div>