@model Lulus.ViewModels.Order.CurrentCartRespond
<div>
    <p>@Model.Order_ID</p>
    <h2>My Cart</h2>
    <p>@Model.DetailCount</p>
    @if(Model.DetailCount == 0)
            {
                <p>Empty cart</p>
            }
            else
            {
                @foreach(var item in Model.OrderDetails)
                {
                    <p>Name: @item.Product_Name</p>
                    <p>Price: @item.Product_SellPrice</p>
                    <p>Quantity: @item.OrderDetail_Quantity</p>
                    <hr/>
                }
            }
</div>